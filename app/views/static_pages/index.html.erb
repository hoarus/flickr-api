
<%= flash.alert  %>

<%= form_with(url: "/", method: 'get', local: true)  do |f| %>
  <h2>Flickr api</h2>

  <div>
  <%= f.label :user_id, "Flickr User Id:" %>
   <%= f.text_field :user_id %>
  </div>

  <%= f.submit "Show photos" %>
<% end %>


<% unless params[:user_id].blank? %>
  <div>Displaying public photos uploaded by <%= params[:user_id] %> </div>
  <div>
    <% @photos.each do |photo| %>
      <div>
        <img src="<%= Flickr.url_n(photo) %>"/>
      </div>
    <% end %>
  </div>
<% end %>